<%- include('../partials/_head') %>
        <div class="rows">
            <div class="col">
              <a href="/pegawai/create" class="btn-success btn btn-sm mt-3 mb-3">tambah</a>
                <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nama</th>
                        <th scope="col">NIP</th>
                        <th scope="col">Jabatan</th>
                      </tr>
                    </thead>
                    <tbody>
                        <% for( let i = 0; i < data.length; i++ ) { %>
                            <tr>
                              <th scope="row"><%= (i+1) %></th>
                              <td><%= data[i].nama_pegawai %></td>
                              <td><%= data[i].nip_pegawai %></td>
                              <td><%= data[i].jabatan %></td>
                              <td>
                                <a href="/pegawai/edit/<%= data[i].id_pegawai %>" class="btn btn-warning btn-sm">Edit</a>
                                <a href="/pegawai/delete/<%= data[i].id_pegawai %>" class="btn btn-danger btn-sm">Delete</a>
                              </td>
                            </tr>
                        <% } %>
                    </tbody>
                  </table>
            </div>
        </div>
<%- include('../partials/_foot') %>