<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    <div class="container">
      <div class="rows">
        <div class="cols d-flex justify-content-center">
          <form action="/login" method="post" class="w-25 mt-5 p-4 bg-secondary bg-gradient bg-opacity-75 rounded">
            <div class="mb-3 d-flex justify-content-center">
              <label for="exampleInputEmail1" class="form-label fs-4">Login Form</label>
            </div>
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">Username</label>
              <% if (messages.userWrong) { %>
                    <p class="text-danger"><%= messages.userWrong %></p>
              <% } %>
              <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="username">
            </div>
            <div class="mb-3">
              <label for="exampleInputPassword1" class="form-label">Password</label>
              <% if (messages.pwWrong) { %>
                <p class="text-danger"><%= messages.pwWrong %></p>
              <% } %>
              <input type="password" class="form-control" id="exampleInputPassword1" name="password">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
      </div>
<%- include('partials/_foot') %>
