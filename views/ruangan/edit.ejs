<%- include('../partials/_head') %>
        <div class="rows">
            <div class="col">
                <a href="/ruangan" class="btn btn-sm btn-danger mt-3 mb-3">Kembali</a>
                <form action="/ruangan/update/<%= id %>" method="post" class="d-flex flex-column gap-4 col-5 mb-3">
                    <input type="text" placeholder="nama" name="nama_ruangan" value="<%= nama %>" required>
                    <input type="text" placeholder="kode" name="kode_ruangan" value="<%= kode %>" required>
                    <select name="pic">
                        <% for( let i = 0; i < data.length; i++ ) { %>
                            <option value="<%= data[i].id_pegawai %>"><%= data[i].nama_pegawai %></option>
                        <% } %>
                    </select>
                    <button type="submit" class="btn btn-success btn-sm col-2">Submit</button>
                </form>
            </div>
        </div>
<%- include('../partials/_foot') %>